{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "Preserve",
    "rootDir": "../"
  },
  "exclude": [
    "../**/*.spec.ts",
    "../**/*.test.ts",
    "../**/*.spec.tsx",
    "../**/*.test.tsx"
  ],
  "include": [
    "../src/**/*.stories.ts",
    "../src/**/*.stories.tsx",
    "../src/**/*.stories.mdx",
    "**/*.ts",
    "**/*.tsx",
    "main.js"
  ]
}
